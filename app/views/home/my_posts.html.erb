<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <!-- Pass PF -->
    <div class="container">
      <h3>합격 포트폴리오</h3>

      <% @passes.each do |p| %>
      <div class="container" style="padding:30px; border-top:1px solid #cccccc">
        <div class="media">
          <div class="media-left">
            <img src="http://www.freeiconspng.com/uploads/flat-face-icon-23.png" class="media-object" style="width:60px">
          </div>
          <div class="media-body">
            <p class="media-heading"><%=p.user.name%></p>
            <h4><%= p.title %></h4>
            <p style="font-size:0.8em; color:gray"><%= "#{time_ago_in_words(p.created_at)} 전" %></p>
          </div>
          <div class="media-right">
            <a href="/pass/<%=p.id%>" class="btn btn-info" role="button">이동</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <!-- Post PF -->
    <div class="container">
      <h3>내 포트폴리오</h3>
      
      <% @posts.each do |p| %>
      <div class="container" style="padding:30px; border-top:1px solid #cccccc">
        <div class="media">
          <div class="media-left">
            <img src="http://www.freeiconspng.com/uploads/flat-face-icon-23.png" class="media-object" style="width:60px">
          </div>
          <div class="media-body">
            <p class="media-heading"><%=p.user.name%></p>
            <h4><%= p.title %></h4>
            <p style="font-size:0.8em; color:gray"><%= "#{time_ago_in_words(p.created_at)} 전" %></p>
          </div>
          <div class="media-right">
            <a href="/posts/<%=p.id%>" class="btn btn-info" role="button">이동</a>
          </div>
        </div>
      </div>
      <% end %>

    </div>

  </body>
</html>

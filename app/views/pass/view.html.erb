<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>

    <!-- View -->
    <div class="container" style="margin-top:30px">
      <div class="section">

        <div class="article1">
          <div class="row">
            <div class="col-sm-4 font-wight-bold"><p><%=@pass.title%></p></div>
            <div class="col-sm-5"></div>
            <div class="col-sm-3 text-right"><p><%=@pass.updated_at.in_time_zone("Asia/Seoul").strftime("%Y.%m.%d %H:%M") %></p></div>
          </div>
        </div>

        <div class="article2">
          <div class="row">
            <div class="col-sm-4"><p>작성자 : <%=@pass.user.name%></p></div>
            <div class="col-sm-5"></div>
            <div class="col-sm-3 text-right">
              <span>조회수 : <%= "#{@post.unique_impression_count}" %></span>&nbsp;&nbsp;&nbsp;
              <span>수 : </span>
            </div>
          </div>
        </div>

        <div class="article3">
          <div class="row">
            <div class="col-sm-8"></div>
            <div class="col-sm-4 text-right">다운로드 : <a href="<%=@pass.file_url%>" data-confirm="다운로드 하시겠습니까?" download><%=@pass.original_filename%></a></div>
          </div>

          <div class="row" id="content">
            <div class="col-sm-12"><p><%=@pass.content.html_safe%></p></div>
          </div>

          <div class="row">
            <div class="col-sm-10"></div>
            <div class="col-sm-2 text-right">
              <% if (user_signed_in?) && (@pass.user.id == current_user.id) %>
              <span><%= link_to '[삭제]', "/pass/#{@pass.id}", class: 'text-danger', method: 'delete', data: {confirm: "정말 삭제하시겠습니까?"} %></span>
              <span><%= link_to '[수정]', "/pass/#{@pass.id}/edit", class: 'text-success' %></span>
              <% end %>
              <span><%= link_to '[목록]', '/pass', class: 'text-primary' %></span>
            </div>
          </div>
        </div>

      </div>
    </div>

  </body>

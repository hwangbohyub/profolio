<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <!-- Search -->
    <div class="container" style="margin-top:30px; margin-bottom:30px">
      <form class="navbar-form navbar-right" method="get" action="/posts/all">
        <div class="form-group">
          <input type="text" name="query" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>

    <!-- Pass PF -->
    <div class="container">
      <% if @search_result==1 %>
        <p><%=@posts.length%>개의 결과...</p>
      <% end %>

      <% @posts.each do |p| %>
      <div class="container" style="padding:30px; border-top:1px solid #cccccc">
        <div class="media">
          <div class="media-left">
            <img src="<%= asset_path @user %>" class="media-object" style="width:60px">
          </div>
          <div class="media-body">
            <h4 class="media-heading">User Name</h4>
            <p><%= p.content.html_safe %></p>
          </div>
          <div class="media-right">
            <a href="/posts/view_all/<%=p.id%>" class="btn btn-info" role="button">이동</a>
          </div>
        </div>
      </div>
      <% end %>

    </div>


  </body>
</html>
